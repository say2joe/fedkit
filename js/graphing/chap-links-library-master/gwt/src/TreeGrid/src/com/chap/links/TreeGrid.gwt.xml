<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='treegrid'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <!-- <inherits name='com.google.gwt.user.theme.standard.Standard'/>  -->
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

  <!-- Other module inherits                                      -->
  <inherits name='com.google.gwt.visualization.Visualization'/>
  <inherits name="com.google.gwt.json.JSON" /> 
  
  <!-- Specify the app entry point class.                         -->
  <!-- Uncomment next line if you want to test the treegrid -->
  <!-- Comment the line if you want to pack TreeGrid.java into a  -->
  <!-- jar module (which must NOT have an entry point specified)  -->
  <!-- <entry-point class='com.chap.links.client.TreeGridEntryPoint'/> -->

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>

  <!-- include the javascript and css source of the treegrid      -->
  <!-- these files should be located in the subfolder             -->
  <!--   com/chap/links/treegrid/public                           -->
  <script src="treegrid.js"></script>
  <stylesheet src="treegrid.css"></stylesheet>

</module>
